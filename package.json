{
  "name": "jet-trainees-todo",
  "version": "1.0.0",
  "description": "a starter todo list in React course",
  "main": "src/app.js",
  "keywords": [],
  "author": "Viktor Zhurbin",
  "license": "ISC",
  "engines": {
    "node": ">=8.9.0 <=9.4.0",
    "npm": "npm >=5.6.0"
  },
  "scripts": {
    "start": "npm run clean:tmp && parcel src/index.html -p 3000 --out-dir .tmp",
    "build": "npm run lint && npm run clean && npm run build:parcel",
    "lint": "npm run lint:js && npm run lint:css",
    "lint-fix": "npm run lint:js:fix && npm run lint:css:fix",
    "lint:js:fix": "eslint ./src/**/*.js --fix",
    "lint:css:fix": "stylelint ./src/**/*.css --fix",
    "lint:css": "stylelint --ignore-path .gitignore ./src/**/*.css",
    "lint:js": "eslint --ignore-path .gitignore -- ./src",
    "clean": "npm run clean:build",
    "clean:tmp": "rimraf ./.tmp",
    "clean:build": "rimraf ./build",
    "build:parcel": "parcel build src/index.html --out-dir build --no-cache"
  },
  "pre-commit": [
    "lint-fix",
    "lint"
  ],
  "devDependencies": {
    "ajv": "^6.2.0",
    "autoprefixer": "^7.2.5",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "eslint": "^4.18.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "^2.5.0",
    "eslint-plugin-react": "^7.7.0",
    "parcel-bundler": "^1.6.2",
    "postcss-modules": "^1.1.0",
    "pre-commit": "^1.2.2",
    "prettier": "^1.10.2",
    "prettier-stylelint": "^0.4.2",
    "rimraf": "^2.6.2",
    "stylelint": "^8.4.0"
  },
  "dependencies": {
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  }
}
